<?xml version="1.0" encoding="utf-8"?>
<layout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#21ffc107"
    tools:context=".VerifyOTP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/pin"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OTP Verification"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorTextFirst"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Please Enter the OTP sent to"
            android:textColor="@color/colorTextSecond"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="+917007459349"
            android:textColor="@color/colorTextSecond"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@null">

            <EditText
                android:layout_marginStart="1dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_box"
                android:id="@+id/etOTP1"
                android:textSize="16sp"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:importantForAutofill="no"
                android:inputType="number"
                android:gravity="center"
                tools:ignore="LabelFor"
                android:layout_marginEnd="2dp"
                />
            <EditText
                android:layout_marginStart="1dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_box"
                android:id="@+id/etOTP2"
                android:textSize="16sp"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:importantForAutofill="no"
                android:inputType="number"
                android:gravity="center"
                tools:ignore="LabelFor"
                android:layout_marginEnd="2dp"
                />
            <EditText
                android:layout_marginStart="1dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_box"
                android:id="@+id/etOTP3"
                android:textSize="16sp"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:importantForAutofill="no"
                android:inputType="number"
                android:gravity="center"
                tools:ignore="LabelFor"
                android:layout_marginEnd="2dp"
                />
            <EditText
                android:layout_marginStart="1dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_box"
                android:id="@+id/etOTP4"
                android:textSize="16sp"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:importantForAutofill="no"
                android:inputType="number"
                android:layout_marginEnd="2dp"
                />
            <EditText
                android:layout_marginStart="1dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_box"
                android:id="@+id/etOTP5"
                android:textSize="16sp"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:importantForAutofill="no"
                android:inputType="number"
                android:gravity="center"
                tools:ignore="LabelFor"
                android:layout_marginEnd="2dp"
                />
            <EditText
                android:layout_marginStart="1dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_box"
                android:id="@+id/etOTP6"
                android:textSize="16sp"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:importantForAutofill="no"
                android:inputType="number"
                android:gravity="center"
                tools:ignore="LabelFor"
                android:layout_marginEnd="2dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't Receive OTP?"
                android:textColor="@color/colorTextSecond"
                />
            <TextView
                android:id="@+id/tvResendOTP"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend OTP"
                android:textColor="@color/colorTextFirst"
                android:textStyle="bold"
                />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnVerifyOTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Verify OTP"
                android:textColor="@color/colorTextFirst"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/background_button_otp"
                />

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/pbLoading"
                android:layout_gravity="center"
                android:visibility="gone"
                />

        </FrameLayout>
    </LinearLayout>

</ScrollView>
</layout>